//- クラゲ一覧のスライダー
mixin jellyfish-list-slider(jellyfishes)
  -var count = 0;

  .swiper-container 
    .swiper-wrapper 
    
      each jellyfish in jellyfishes
        - count++
        .swiper-slide 
          .jellyfish-list__slider-item
            img.jellyfish-list__slider-item-img(
              src=jellyfish.imgSrc
              srcset=jellyfish.imgSrcset
              width="234.92"
              height="184.92"
            )

            h3.jellyfish-list__slider-item-title #{jellyfish.name}

            p.jellyfish-list__slider-item-desc #{jellyfish.desc}

  .swiper-pagination